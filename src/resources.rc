/*
 * Resource Script File
 * 
 * This file defines the visual elements of the application:
 * - Dialogs and their controls
 * - Menus
 * - Icons
 * - Strings
 * - Application manifest (for modern Windows theming)
 * 
 * The resource compiler (windres) compiles this into binary format
 * that gets embedded in the executable.
 * 
 * UTF-8 Encoding: The #pragma ensures proper Unicode support
 */

#pragma code_page(65001)

#include <windows.h>
#include "resource.h"

/*
 * Application Icon
 * 
 * Custom icon created using GDI+. Displays in:
 * - Title bars of all dialogs
 * - System tray notification area
 * - Taskbar
 * - Alt+Tab switcher
 */
IDI_MAINICON ICON "app.ico"

/*
 * Application Manifest
 * 
 * The manifest enables modern Windows features:
 * - Visual Styles (Windows XP+): Modern button/control rendering
 * - DPI Awareness: Crisp display on high-DPI screens (4K, etc.)
 * - Common Controls v6: Required for modern ListView appearance
 * 
 * Without this manifest, the app would look like Windows 95 era software!
 */
1 RT_MANIFEST "app.manifest"

/*
 * Login Dialog - Compact Modern Design
 * 
 * This is where users enter their default RDP credentials.
 * These credentials will be stored in Windows Credential Manager.
 * 
 * Compact layout focuses on the essential input fields without
 * unnecessary visual clutter or large group boxes.
 */
IDD_LOGIN DIALOGEX 0, 0, 320, 145
STYLE DS_MODALFRAME | DS_CENTER | DS_SHELLFONT | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "WinRDP - Enter Credentials"
FONT 9, "Segoe UI"
BEGIN
    /* Username field with clean layout */
    LTEXT           "Username:", IDC_STATIC, 15, 18, 60, 10
    EDITTEXT        IDC_EDIT_USERNAME, 85, 15, 220, 13, ES_AUTOHSCROLL | WS_TABSTOP, WS_EX_CLIENTEDGE
    
    /* Password field */
    LTEXT           "Password:", IDC_STATIC, 15, 45, 60, 10
    EDITTEXT        IDC_EDIT_PASSWORD, 85, 42, 220, 13, ES_PASSWORD | ES_AUTOHSCROLL | WS_TABSTOP, WS_EX_CLIENTEDGE
    
    /* Compact status line - only shown when credentials exist */
    LTEXT           "", IDC_STATIC_STATUS, 15, 72, 200, 10
    PUSHBUTTON      "Delete Saved", IDC_BTN_DELETE_CREDS, 220, 69, 85, 18, WS_TABSTOP
    
    /* Separator line for visual grouping */
    CONTROL         "", IDC_STATIC, "Static", SS_ETCHEDHORZ, 15, 103, 290, 1
    
    /* Action buttons - aligned right for modern look */
    DEFPUSHBUTTON   "Save && Continue", IDOK, 135, 115, 85, 22, WS_TABSTOP
    PUSHBUTTON      "Cancel", IDCANCEL, 225, 115, 80, 22, WS_TABSTOP
END

/*
 * Main Server List Dialog - Modern Styled
 * 
 * This shows the list of available RDP servers and allows
 * searching and connecting to them.
 * 
 * The ListView control displays servers in a clean, modern grid.
 */
